<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOrder"
    android:background="@drawable/back4">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="50dp"
        android:id="@+id/contents">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BF246FAF">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/l1"
                android:gravity="center"
                app:cardCornerRadius="30dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Enter Bill Number"
                    android:id="@+id/billNumber"
                    android:textColorHint="#D3B3B3"
                    android:background="#E62C488E"
                    android:layout_weight="1"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/l1"
                android:gravity="center"
                android:id="@+id/l2"
                app:cardCornerRadius="30dp"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:hint="Enter amount"
                    android:textColorHint="#D3B3B3"
                    android:id="@+id/amount"
                    android:layout_weight="1"
                    android:background="#E62C488E"
                    />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/l2"
                android:gravity="center"
                android:id="@+id/l3"
                app:cardCornerRadius="30dp"
                >

                <EditText
                    android:id="@+id/bookingDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter booking date"
                    android:textColorHint="#D3B3B3"
                    android:layout_weight="1"
                    android:background="#E62C488E"
                     />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/l3"
                android:gravity="center"
                android:id="@+id/l4"
                app:cardCornerRadius="30dp"
                >

                <EditText
                    android:id="@+id/deliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Enter Delivery date"
                    android:textColorHint="#D3B3B3"
                    android:background="#E62C488E"
                    />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/contents"
        android:gravity="center"
        android:id="@+id/l5"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="30dp"
            android:elevation="30dp"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save"
                android:textSize="20dp"
                android:id="@+id/saveButton"
                android:background="#CAD3E3"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>